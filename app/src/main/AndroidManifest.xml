<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tripexpense">
<!--    android:networkSecurityConfig="@xml/network_security_config"-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TripExpense"
        tools:targetApi="31">
        <activity
            android:name=".UploadActivity"
            android:label="Upload API Lecturer Gift"
            android:exported="false" />
        <activity
            android:name=".SearchActivity"
            android:exported="false"
            android:label="Search Trip" />
        <activity
            android:name=".AddExpenseActivity"
            android:exported="false"
            android:label="Add Expense" />
        <activity
            android:name=".ExpenseMainActivity"
            android:exported="false"
            android:label="Expense Detail List" />
        <activity
            android:name=".EditTripActivity"
            android:exported="false"
            android:label="Edit Trip" />
        <activity
            android:name=".AddTripActivity"
            android:exported="false"
            android:label="Add Trip" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Trip List">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>